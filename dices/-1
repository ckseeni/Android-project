  <script>
    $('#gcb-left-nav-toggle a').click(function(){
        if ($(this).hasClass('show')) {
            $(this).removeClass('show');
            $('#gcb-nav-y').hide();
            $('.gcb-unit-header').show('fast');
            $('#gcb-nav-y + .gcb-article').show('fast');
        } else {
            $(this).addClass('show');
            $('#gcb-nav-y').show('fast');
            $('.gcb-unit-header').hide();
            $('#gcb-nav-y + .gcb-article').hide();
        }
        return false;
    });
  </script>

